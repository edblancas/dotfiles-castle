# PATH
export PATH="$HOMEBREW_COREUTILS/gnubin:$HOMEBREW/bin:$HOMEBREW/sbin:/opt/local/bin:/opt/local/sbin:$PATH"

export MANPATH="/usr/local/opt/coreutils/libexec/gnuman:/opt/local/share/man:$MANPATH"

# BIN HOME
export PATH="$HOME/bin:$PATH"

# use ruby from hombrew and not the outdated ruby from os
export PATH="/usr/local/opt/ruby/bin:$PATH"

# Seems this path env is only for linux, meh replicating here
export XDG_CONFIG_HOME="$HOME/.config"

export EZA_CONFIG_DIR="$HOME/.config/eza/"
